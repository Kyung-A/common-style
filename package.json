{
  "name": "wepback-scss",
  "scripts": {
    "build": "run-s sass postcss",
    "build:watch": "onchange -i \"src/scss/**/*.scss\" -- npm run build",
    "sass": "sass src/scss/:src/css --no-source-map",
    "postcss": "postcss src/css/ -r"
  },
  "dependencies": {
    "autoprefixer": "^10.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.1.14",
    "postcss-cli": "^8.3.0",
    "sass": "^1.29.0"
  },
  "devDependencies": {}
}
